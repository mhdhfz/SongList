@model Song
@{ 
    ViewBag.Title = ViewBag.Action + " song";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="SongId" />
    <div class="form-group">
        <label class="label" asp-for="Name"></label>
        <input class="form-control" asp-for="Name" />
        <span class="text-danger" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label class="label" asp-for="Year"></label>
        <input class="form-control" asp-for="Year" />
        <span class="text-danger" asp-validation-for="Year"></span>
    </div>
    <div class="form-group">
        <label class="label" asp-for="Rating"></label>
        <input class="form-control" asp-for="Rating" />
        <span class="text-danger" asp-validation-for="Rating"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">@ViewBag.Action</button> |
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
